<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DoAndGet.AddActivityPage" Title="Add Activity" xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" ios:Page.UseSafeArea="True" NavigationPage.HasNavigationBar="False" xmlns:controls="clr-namespace:DoAndGet.Renderer">
    <ContentPage.Content>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2.5*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="5.5*" />
            </Grid.RowDefinitions>
            <Image Source="main" Grid.Row="0" Grid.RowSpan="3" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="AspectFill" />
            <ImageButton Source="back" HeightRequest="20" WidthRequest="20" HorizontalOptions="StartAndExpand" Aspect="AspectFit" Margin="15,10,0,0" VerticalOptions="StartAndExpand" Grid.Row="0" Command="{Binding AddActivity}"/>
            <Frame Margin="0" HasShadow="True" Padding="10" Grid.Row="2" Grid.RowSpan="2" HorizontalOptions="FillAndExpand" BackgroundColor="#F2F2F9" VerticalOptions="FillAndExpand" CornerRadius="30">
                <StackLayout>
                      <Label Text="Activity Form" TextColor="#3139BD" VerticalTextAlignment="Center" Grid.Row="0" FontSize="Large" Grid.Column="0" FontAttributes="Bold" />
                <ScrollView VerticalScrollBarVisibility="Never" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Grid HorizontalOptions="FillAndExpand" Padding="10" VerticalOptions="FillAndExpand" RowSpacing="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>


                      

                        <controls:MyFrame Margin="0" HorizontalOptions="FillAndExpand"  VerticalOptions="CenterAndExpand" CornerRadius="30" Padding="20" Grid.Row="1">
                            <StackLayout Orientation="Horizontal">
                                <Image Source="download" HeightRequest="20" WidthRequest="20" />
                                <controls:MyEntry x:Name="mailEntry" PlaceholderColor="#CCCCCC" Placeholder="Activity Name " HorizontalOptions="FillAndExpand" VerticalOptions="Center">

                                </controls:MyEntry>
                            </StackLayout>
                        </controls:MyFrame>
                        <controls:MyFrame Margin="0" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" CornerRadius="30" Padding="15" Grid.Row="2">
                            <StackLayout Orientation="Horizontal">
                                <Image Source="myreward" HeightRequest="30" WidthRequest="30" />
                                <controls:MyPicker HorizontalOptions="FillAndExpand" VerticalOptions="Center" Title="Add child" Image="down.png">
                                    <controls:MyPicker.Items>

                                        <x:String>Tousif Raza</x:String>
                                        <x:String>Rishi Lohani</x:String>
                                         <x:String>Sam </x:String>
                                         <x:String>Peter</x:String>
                                    </controls:MyPicker.Items>
                                </controls:MyPicker>


                            </StackLayout>
                        </controls:MyFrame>
                        <controls:MyFrame Margin="0" CornerRadius="30" Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Grid.Row="3">
                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="35">
                                <Image Source="star" HeightRequest="30" WidthRequest="30" />
                                <Button ImageSource="minus" Command="{Binding minusbuttonCommand}" FontSize="20" />
                                <Label VerticalTextAlignment="Center" Text="{Binding AddPoint}" FontSize="20" />
                                <ImageButton Source="plus1" Command="{Binding addbuttonCommand}" />
                            </StackLayout>
                        </controls:MyFrame>

                        <Button Text="Add Activity" Margin="0" Grid.Row="4" Padding="20" VerticalOptions="CenterAndExpand" BackgroundColor="#FEBA09" TextColor="white" CornerRadius="30" FontSize="Body" Command="{Binding AddActivity}" />

                    </Grid>
                </ScrollView>
                    </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
